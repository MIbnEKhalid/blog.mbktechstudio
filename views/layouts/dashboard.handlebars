<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="/Assets/Images/Icon/dgicon.svg">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/Assets/dashboard.css">
    <link rel="stylesheet" href="/Assets/post-card.css">
    <script src="/Assets/Scripts/logout.js" defer></script>
    {{{_sections.styles}}}
    <style>
        /* Base Styles - Matching Main Blog Theme */
        :root {
            --primary: #2196f3;
            --primary-dark: #1769aa;
            --secondary: #43e97b;
            --accent: #00b894;
            --dark: #101c1c;
            --darker: #0a1414;
            --light: #eaf6fb;
            --text: #e0f7fa;
            --text-light: #b2dfdb;
            --text-dark: #1a2a2a;
            --success: #43e97b;
            --warning: #ffd166;
            --danger: #ff7675;
            --border-radius: 8px;
            --box-shadow: 0 4px 20px rgba(33, 150, 243, 0.15);
            --transition: all 0.3s cubic-bezier(.4, 0, .2, 1);
            --sidebar-width: 250px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: var(--dark);
            color: var(--text);
            line-height: 1.6;
        }

        @media (max-width: 768px) {
            .dashboard-menu-toggle {
                display: flex;
                position: fixed;
                top: 0.5rem;
                right: 1rem;
                background: rgba(0, 0, 0, 0.3);
                color: white;
                border: 1px solid rgba(255, 255, 255, 0.2);
                padding: 0.75rem 1rem;
                border-radius: 8px;
                cursor: pointer;
                z-index: 1002;
                align-items: center;
                gap: 0.5rem;
                font-size: 1rem;
                backdrop-filter: blur(10px);
            }

            .dashboard-menu-toggle:hover {
                background: rgba(0, 184, 148, 0.3);
                border-color: var(--accent);
            }

            .nav-menu.active .nav-item:last-child {
                border-top: 1px solid rgba(255, 255, 255, 0.1);
                padding-top: 1rem;
                margin-top: 1rem;
            }
        }

        @media (min-width: 769px) {
            .dashboard-menu-toggle {
                display: none !important;
            }
        }
    </style>
</head>

<body>
    <div class="dashboard-wrapper">
        <button class="dashboard-menu-toggle" id="dashboardMenuToggle">
            <i class="fas fa-bars"></i>
            <span>Menu</span>
        </button>
        <aside class="dashboard-sidebar">
            <div class="dashboard-logo" onclick="location.href='/'">
                <i class="fas fa-blog"></i> MBK Blog
            </div>
            <nav>
                <ul class="nav-menu" id="dashboardNavMenu">
                    <li class="nav-item">
                        <a href="/dashboard" class="nav-link {{#if (eq active 'dashboard')}}active{{/if}}">
                            <i class="fas fa-chart-line"></i> Overview
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/dashboard/posts" class="nav-link {{#if (eq active 'posts')}}active{{/if}}">
                            <i class="fas fa-newspaper"></i> Posts
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/dashboard/categories" class="nav-link {{#if (eq active 'categories')}}active{{/if}}">
                            <i class="fas fa-folder"></i> Categories
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/dashboard/tags" class="nav-link {{#if (eq active 'tags')}}active{{/if}}">
                            <i class="fas fa-tags"></i> Tags
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/dashboard/comments" class="nav-link {{#if (eq active 'comments')}}active{{/if}}">
                            <i class="fas fa-comments"></i> Comments
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/" class="nav-link">
                            <i class="fas fa-home"></i> Back to Blog
                        </a>
                    </li>
                    <li class="nav-item">
                        <a onclick="logout()" class="nav-link" style="cursor: pointer;">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <main class="dashboard-main">
            <div class="fade-in">
                {{{body}}}
            </div>
        </main>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script>
        // Dashboard Mobile Menu Toggle
        document.addEventListener('DOMContentLoaded', function () {
            const menuToggle = document.getElementById('dashboardMenuToggle');
            const navMenu = document.getElementById('dashboardNavMenu');
            const navLinks = navMenu ? navMenu.querySelectorAll('.nav-link') : [];

            if (menuToggle && navMenu) {
                // Toggle menu on button click
                menuToggle.addEventListener('click', function (e) {
                    e.stopPropagation();
                    navMenu.classList.toggle('active');
                });

                // Close menu when a link is clicked
                navLinks.forEach(link => {
                    link.addEventListener('click', function () {
                        navMenu.classList.remove('active');
                    });
                });

                // Close menu when clicking outside
                document.addEventListener('click', function (e) {
                    if (!e.target.closest('.dashboard-sidebar') &&
                        !e.target.closest('.dashboard-menu-toggle')) {
                        navMenu.classList.remove('active');
                    }
                });
            }
        });
    </script>
    {{{_sections.scripts}}}
</body>

</html>