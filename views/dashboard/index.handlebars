{{#section 'styles'}}
<title>Dashboard - Overview</title>
<style>
    /* Page Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 1.5rem;
        border-bottom: 2px solid rgba(255, 255, 255, 0.1);
    }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--light);
        margin: 0;
    }

    .page-subtitle {
        color: var(--text-light);
        font-size: 0.9rem;
        opacity: 0.8;
        margin-top: 0.25rem;
    }

    /* Stats Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .stat-card {
        position: relative;
        padding: 1.75rem;
        border-radius: var(--border-radius);
        display: flex;
        flex-direction: column;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: var(--box-shadow);
        transition: var(--transition);
        backdrop-filter: blur(5px);
    }

    .stat-card:hover {
        box-shadow: 0 8px 24px rgba(33, 150, 243, 0.25);
        transform: translateY(-2px);
        border-color: var(--accent);
        background: rgba(255, 255, 255, 0.08);
    }

    .stat-card-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem;
    }

    .stat-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .stat-icon.primary {
        background: rgba(33, 150, 243, 0.2);
        color: var(--primary);
    }

    .stat-icon.success {
        background: rgba(67, 233, 123, 0.2);
        color: var(--success);
    }

    .stat-label {
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--text-light);
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .stat-value {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--light);
        line-height: 1;
        margin-bottom: 0.75rem;
    }

    .stat-details {
        font-size: 0.85rem;
        color: var(--text-light);
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .stat-detail-item {
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    .stat-detail-item span {
        font-weight: 500;
        color: var(--text);
    }

    /* Quick Actions */
    .quick-actions {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .action-btn {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        padding: 1.5rem 1rem;
        background: rgba(255, 255, 255, 0.05);
        color: var(--text);
        border-radius: var(--border-radius);
        text-decoration: none;
        transition: var(--transition);
        border: 1px solid rgba(255, 255, 255, 0.1);
        position: relative;
        overflow: hidden;
        backdrop-filter: blur(5px);
    }

    .action-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(120deg,
                transparent,
                rgba(0, 184, 148, 0.1),
                transparent);
        transition: 0.5s;
    }

    .action-btn:hover {
        border-color: var(--accent);
        box-shadow: 0 8px 24px rgba(0, 184, 148, 0.25);
        transform: translateY(-2px);
        background: rgba(0, 184, 148, 0.08);
    }

    .action-btn:hover::before {
        left: 100%;
    }

    .action-btn i {
        font-size: 1.75rem;
        color: var(--accent);
        transition: transform 0.3s ease;
    }

    .action-btn:hover i {
        transform: scale(1.1) rotate(5deg);
    }

    .action-btn-text {
        font-size: 0.95rem;
        font-weight: 600;
        color: var(--text);
    }

    /* Content Grid */
    .content-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
        gap: 2rem;
        margin-bottom: 2rem;
    }

    /* Content Cards */
    .content-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: var(--border-radius);
        padding: 2rem;
        box-shadow: var(--box-shadow);
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: var(--transition);
        position: relative;
        overflow: hidden;
        backdrop-filter: blur(5px);
    }

    .content-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(to right, var(--accent), var(--secondary));
    }

    .content-card:hover {
        box-shadow: 0 8px 24px rgba(33, 150, 243, 0.2);
        transform: translateY(-2px);
        border-color: var(--accent);
        background: rgba(255, 255, 255, 0.08);
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid rgba(255, 255, 255, 0.1);
    }

    .card-title {
        font-size: 1.2rem;
        font-weight: 600;
        color: var(--light);
        margin: 0;
    }

    .card-link {
        font-size: 0.8rem;
        color: var(--accent);
        text-decoration: none;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        background: rgba(0, 184, 148, 0.15);
        font-weight: 600;
        transition: var(--transition);
    }

    .card-link:hover {
        background: rgba(0, 184, 148, 0.25);
        transform: translateX(2px);
    }

    /* Item List */
    .item-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .list-item {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding: 1rem;
        border-radius: 8px;
        background: rgba(0, 0, 0, 0.2);
        transition: var(--transition);
        border-left: 3px solid transparent;
    }

    .list-item:hover {
        background: rgba(0, 184, 148, 0.1);
        border-left-color: var(--accent);
        transform: translateX(4px);
        box-shadow: 0 2px 8px rgba(0, 184, 148, 0.15);
    }

    .list-item-title {
        font-size: 0.95rem;
        font-weight: 600;
        color: var(--light);
        text-decoration: none;
        transition: var(--transition);
        display: inline-block;
        max-width: fit-content;
    }

    .list-item-title:hover {
        color: var(--accent);
    }

    .list-item-meta {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        align-items: center;
        font-size: 0.8rem;
        color: var(--text-light);
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }

    .meta-item a {
        color: var(--text-light);
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .meta-item a:hover {
        color: var(--accent);
    }

    .meta-item i {
        color: var(--text-light);
        font-size: 0.85rem;
    }

    /* Badges */
    .badge {
        padding: 0.35rem 0.75rem;
        border-radius: 20px;
        font-size: 0.7rem;
        font-weight: 600;
        letter-spacing: 0.02em;
        text-transform: uppercase;
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        white-space: nowrap;
    }

    .badge-draft {
        background: rgba(255, 209, 102, 0.2);
        color: var(--warning);
    }

    .badge-published {
        background: rgba(67, 233, 123, 0.2);
        color: var(--success);
    }

    .badge-private {
        background: rgba(255, 118, 117, 0.2);
        color: var(--danger);
    }

    .badge-pending {
        background: rgba(255, 152, 0, 0.2);
        color: #ea580c;
    }

    .badge-approved {
        background: rgba(67, 233, 123, 0.2);
        color: var(--success);
    }

    /* Mobile Responsive */
    @media (max-width: 1024px) {
        .page-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .page-title {
            font-size: 1.75rem;
        }

        .stats-grid {
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .stat-value {
            font-size: 2rem;
        }

        .quick-actions {
            grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .action-btn {
            padding: 1.25rem 0.75rem;
        }

        .content-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
    }

    @media (max-width: 768px) {
        .page-title {
            font-size: 1.5rem;
        }

        .page-subtitle {
            font-size: 0.85rem;
        }

        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            padding: 1rem;
            flex-direction: column;
        }

        .stat-card-header {
            margin-bottom: 0.75rem;
        }

        .stat-label {
            font-size: 0.75rem;
        }

        .stat-value {
            font-size: 1.75rem;
        }

        .stat-details {
            font-size: 0.75rem;
            gap: 0.5rem;
        }

        .quick-actions {
            grid-template-columns: repeat(2, 1fr);
            gap: 0.75rem;
            margin-bottom: 2rem;
        }

        .action-btn {
            padding: 1rem 0.5rem;
            gap: 0.5rem;
        }

        .action-btn i {
            font-size: 1.5rem;
        }

        .action-btn-text {
            font-size: 0.85rem;
        }

        .content-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .content-card {
            padding: 1.5rem;
        }

        .card-header {
            margin-bottom: 1rem;
            padding-bottom: 0.75rem;
        }

        .card-title {
            font-size: 1.05rem;
        }

        .card-link {
            font-size: 0.75rem;
            padding: 0.4rem 0.75rem;
        }

        .list-item {
            padding: 0.75rem;
        }

        .list-item-title {
            font-size: 0.9rem;
        }

        .list-item-meta {
            font-size: 0.75rem;
            gap: 0.75rem;
        }

        .badge {
            padding: 0.3rem 0.6rem;
            font-size: 0.65rem;
        }
    }

    @media (max-width: 480px) {
        .page-title {
            font-size: 1.25rem;
        }

        .page-subtitle {
            font-size: 0.8rem;
        }

        .stats-grid {
            grid-template-columns: 1fr;
            gap: 0.75rem;
            margin-bottom: 1.5rem;
        }

        .stat-card {
            padding: 0.75rem;
        }

        .stat-label {
            font-size: 0.7rem;
        }

        .stat-value {
            font-size: 1.5rem;
        }

        .stat-details {
            font-size: 0.7rem;
            flex-direction: column;
            gap: 0.25rem;
        }

        .quick-actions {
            grid-template-columns: 1fr;
            gap: 0.5rem;
            margin-bottom: 1.5rem;
        }

        .action-btn {
            padding: 0.75rem;
            gap: 0.4rem;
        }

        .action-btn i {
            font-size: 1.25rem;
        }

        .action-btn-text {
            font-size: 0.8rem;
        }

        .content-card {
            padding: 1rem;
        }

        .card-header {
            margin-bottom: 0.75rem;
        }

        .card-title {
            font-size: 1rem;
        }

        .list-item {
            padding: 0.65rem;
            gap: 0.35rem;
        }

        .list-item-title {
            font-size: 0.85rem;
        }

        .list-item-meta {
            flex-direction: column;
            font-size: 0.7rem;
            gap: 0.25rem;
        }

        .badge {
            padding: 0.25rem 0.5rem;
            font-size: 0.6rem;
        }
    }
</style>
{{/section}}

<!-- Page Header -->
<div class="page-header">
    <div>
        <h1 class="page-title">Dashboard Overview</h1>
        <p class="page-subtitle">Welcome back! Here's your blog at a glance.</p>
    </div>
</div>

<!-- Stats Grid -->
<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-card-header">
            <div class="stat-icon primary">
                <i class="fas fa-newspaper"></i>
            </div>
        </div>
        <div class="stat-label">Total Posts</div>
        <div class="stat-value">{{postStats.total_posts}}</div>
        <div class="stat-details">
            <div class="stat-detail-item">
                <i class="fas fa-check-circle" style="color: #059669; font-size: 0.75rem;"></i>
                <span>{{postStats.published_posts}} Published</span>
            </div>
            <div class="stat-detail-item">
                <i class="fas fa-file" style="color: #d97706; font-size: 0.75rem;"></i>
                <span>{{postStats.draft_posts}} Drafts</span>
            </div>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-card-header">
            <div class="stat-icon success">
                <i class="fas fa-comments"></i>
            </div>
        </div>
        <div class="stat-label">Total Comments</div>
        <div class="stat-value">{{commentStats.total_comments}}</div>
        <div class="stat-details">
            <div class="stat-detail-item">
                <i class="fas fa-check-circle" style="color: #059669; font-size: 0.75rem;"></i>
                <span>{{commentStats.approved_comments}} Approved</span>
            </div>
            <div class="stat-detail-item">
                <i class="fas fa-clock" style="color: #d97706; font-size: 0.75rem;"></i>
                <span>{{commentStats.pending_comments}} Pending</span>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="quick-actions">
    <a href="/dashboard/posts/create" class="action-btn">
        <i class="fas fa-plus"></i>
        <span class="action-btn-text">New Post</span>
    </a>
    <a href="/dashboard/categories" class="action-btn">
        <i class="fas fa-folder"></i>
        <span class="action-btn-text">Categories</span>
    </a>
    <a href="/dashboard/tags" class="action-btn">
        <i class="fas fa-tags"></i>
        <span class="action-btn-text">Tags</span>
    </a>
    <a href="/dashboard/comments" class="action-btn">
        <i class="fas fa-comments"></i>
        <span class="action-btn-text">Comments</span>
    </a>
</div>

<!-- Content Grid -->
<div class="content-grid">
    <!-- Recent Posts -->
    <div class="content-card">
        <div class="card-header">
            <h2 class="card-title">Recent Posts</h2>
            <a href="/dashboard/posts" class="card-link">View All →</a>
        </div>
        <div class="item-list">
            {{#if recentPosts}}
            {{#each recentPosts}}
            <div class="list-item">
                <a href="/dashboard/posts/edit/{{this.id}}" class="list-item-title">{{this.title}}</a>
                <div class="list-item-meta">
                    <div class="meta-item">
                        <i class="fas fa-folder"></i>
                        <span>{{this.category_name}}</span>
                    </div>
                    <div class="meta-item">
                        {{#if (eq this.status 'published')}}
                        <span class="badge badge-published">Published</span>
                        {{else if (eq this.status 'draft')}}
                        <span class="badge badge-draft">Draft</span>
                        {{else}}
                        <span class="badge badge-private">Private</span>
                        {{/if}}
                    </div>
                </div>
            </div>
            {{/each}}
            {{else}}
            <div class="list-item" style="text-align: center; color: #999; padding: 2rem 1rem;">
                <i class="fas fa-inbox"
                    style="font-size: 2rem; margin-bottom: 0.5rem; display: block; opacity: 0.5;"></i>
                <p>No posts yet. <a href="/dashboard/posts/create" style="color: var(--primary-color);">Create one
                        now!</a></p>
            </div>
            {{/if}}
        </div>
    </div>

    <!-- Recent Comments -->
    <div class="content-card">
        <div class="card-header">
            <h2 class="card-title">Recent Comments</h2>
            <a href="/dashboard/comments" class="card-link">View All →</a>
        </div>
        <div class="item-list">
            {{#if recentComments}}
            {{#each recentComments}}
            <div class="list-item">
                <p class="list-item-title" style="margin: 0; color: var(--dark-color);">{{truncate this.content 80}}</p>
                <div class="list-item-meta">
                    <div class="meta-item">
                        <i class="fas fa-file-alt"></i>
                        <a href="/post/{{this.post_slug}}">{{this.post_title}}</a>
                    </div>
                    <div class="meta-item">
                        {{#if this.is_approved}}
                        <span class="badge badge-approved">Approved</span>
                        {{else}}
                        <span class="badge badge-pending">Pending</span>
                        {{/if}}
                    </div>
                </div>
            </div>
            {{/each}}
            {{else}}
            <div class="list-item" style="text-align: center; color: #999; padding: 2rem 1rem;">
                <i class="fas fa-comments"
                    style="font-size: 2rem; margin-bottom: 0.5rem; display: block; opacity: 0.5;"></i>
                <p>No comments yet</p>
            </div>
            {{/if}}
        </div>
    </div>
</div>