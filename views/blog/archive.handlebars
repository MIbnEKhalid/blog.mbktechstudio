{{#if (eq pageType "posts")}}
{{#section 'styles'}}
{{#if username}}
<title>Posts by {{username}} - MBK Tech Studio Blog</title>
<meta name="description" content="Read all blog posts written by {{username}} on MBK Tech Studio Blog">
<meta name="keywords" content="{{username}}, blog posts, author, technology">
<meta property="og:title" content="Posts by {{username}} - MBK Tech Studio Blog" />
<meta property="og:description" content="Read all blog posts written by {{username}}" />
<meta property="og:type" content="website" />
<meta name="twitter:card" content="summary">
<meta name="twitter:title" content="Posts by {{username}}">
<meta name="twitter:description" content="Read all blog posts written by {{username}} on MBK Tech Studio Blog">
<meta name="twitter:site" content="@ibnekhalid28">
{{else if category}}
<title>{{category.name}} - MBK Tech Studio Blog</title>
<meta name="description"
    content="{{#if category.description}}{{category.description}}{{else}}Browse all {{category.name}} posts on MBK Tech Studio Blog{{/if}}">
<meta name="keywords" content="{{category.name}}, blog posts, tutorials, technology">
<meta property="og:title" content="{{category.name}} - MBK Tech Studio Blog" />
<meta property="og:description"
    content="{{#if category.description}}{{category.description}}{{else}}Browse all {{category.name}} posts{{/if}}" />
<meta property="og:type" content="website" />
<meta name="twitter:card" content="summary">
<meta name="twitter:title" content="{{category.name}} Posts">
<meta name="twitter:description" content="Browse all {{category.name}} posts on MBK Tech Studio Blog">
<meta name="twitter:site" content="@ibnekhalid28">
{{else}}
<title>Posts tagged with "{{tag.name}}" - MBK Tech Studio Blog</title>
<meta name="description" content="Browse all posts tagged with {{tag.name}} on MBK Tech Studio Blog">
<meta name="keywords" content="{{tag.name}}, blog posts, tutorials, technology">
<meta property="og:title" content="Posts tagged with '{{tag.name}}' - MBK Tech Studio Blog" />
<meta property="og:description" content="Browse all posts tagged with {{tag.name}}" />
<meta property="og:type" content="website" />
<meta name="twitter:card" content="summary">
<meta name="twitter:title" content="Posts tagged with {{tag.name}}">
<meta name="twitter:description" content="Browse all posts tagged with {{tag.name}} on MBK Tech Studio Blog">
<meta name="twitter:site" content="@ibnekhalid28">
{{/if}}
{{/section}}

{{#if posts.length}}
<div class="section-container">
    <div class="section-header">
        {{#if username}}
        <h1>Posts by {{username}}</h1>
        {{else if category}}
        <h1>Posts in {{category.name}}</h1>
        {{#if category.description}}
        <p class="description">{{category.description}}</p>
        {{/if}}
        {{else}}
        <h1>Posts tagged with "{{tag.name}}"</h1>
        {{/if}}
    </div>

    {{> partial/searchAndFilter hideAuthorFilter=username hideCategoryFilter=category}}

    <div class="posts-grid" id="postsGrid">
        {{#each posts}}
        <article class="post-card" data-post-id="{{this.id}}" data-author="{{this.UserName}}" data-categories="{{this.categories}}" data-created-at="{{this.created_at}}" data-comment-count="{{this.comment_count}}">
            {{#if this.preview_image}}
            <div class="post-image">
                <a href="/post/{{this.slug}}">
                    <img src="{{this.preview_image}}" alt="{{this.title}}" loading="lazy">
                </a>
                {{#if (eq this.status 'private')}}
                <div class="private-badge">
                    <i class="fas fa-lock"></i>
                    <span>Private</span>
                </div>
                {{/if}}
                <div class="bookmark-badge" style="display: none;">
                    <i class="fas fa-bookmark"></i>
                    <span>Bookmarked</span>
                </div>
            </div>
            {{/if}}
            <div class="post-meta">
                <div class="post-info">
                    <span class="author">By <a href="/author/{{this.UserName}}">{{this.UserName}}</a></span>
                    <span class="category">in {{#each (split this.categories ', ') as |category|}}
                        <a href="/category/{{encodeURIComponent category}}">{{trim category}}</a>{{#unless @last}},
                        {{/unless}}
                        {{/each}}</span>
                    <span class="date">{{formatDate this.created_at}}</span>
                </div>
            </div>
            <h2 class="post-title">
                <a href="/post/{{this.slug}}">{{this.title}}</a>
            </h2>
            <div class="post-content">
                {{#if this.excerpt}}
                {{truncate (stripMarkdown this.excerpt) 150}}
                {{else}}
                {{truncate (stripMarkdown this.content_markdown) 150}}
                {{/if}}
            </div>
            <div class="post-footer">
                <a href="/post/{{this.slug}}" class="read-more">Read More</a>
                <span class="comments-count">{{this.comment_count}} comments</span>
            </div>
        </article>
        {{/each}}
    </div>
</div>

{{> partial/pagination}}
{{> partial/searchAndFilterScript}}
{{else}}
<div class="section-container">
    <div class="empty-state">
        <h2>No posts found</h2>
        {{#if username}}
        <p>This user hasn't published any posts yet.</p>
        {{else if category}}
        <p>No posts have been published in this category yet.</p>
        {{else}}
        <p>No posts have been tagged with this tag yet.</p>
        {{/if}}
        <a href="/" class="btn btn-primary">Back to Home</a>
    </div>
</div>

{{/if}}
{{else if (eq pageType "categories")}}
{{> partial/categoriesMetaData}}

<div class="section-container">
    <div class="section-header">
        <h1>All Categories</h1>
        <p class="subtitle">Browse posts by category</p>
    </div>

    <div class="categories-grid">
        {{#each categories}}
        <a href="/category/{{encodeURIComponent this.name}}" class="category-card">
            <h2>{{trim this.name}}</h2>
            <p class="description">{{this.description}}</p>
            <span class="post-count">{{this.post_count}} posts</span>
        </a>
        {{else}}
        <div class="empty-state">
            <h2>No Categories Found</h2>
            <p>Check back later for new categories.</p>
        </div>
        {{/each}}
    </div>
</div>
{{else if (eq pageType "tags")}}
{{> partial/tagsMetaData}}
<div class="section-container">
    <div class="section-header">
        <h1>All Tags</h1>
        <p class="subtitle">Browse posts by tag</p>
    </div>

    <div class="tags-cloud">
        {{#each tags}}
        <a href="/tag/{{encodeURIComponent this.name}}" class="tag-item" data-count="{{this.post_count}}">
            #{{trim this.name}}
            <span class="post-count">{{this.post_count}} posts</span>
        </a>
        {{else}}
        <div class="empty-state">
            <h2>No Tags Found</h2>
            <p>Check back later for new tags.</p>
        </div>
        {{/each}}
    </div>
</div>
{{/if}}

<style>
    .section-header {
        margin-bottom: 2rem;
        text-align: center;
    }

    .section-header h1 {
        color: var(--light);
        margin-bottom: 1rem;
    }

    .description {
        color: var(--text-light);
        max-width: 600px;
        margin: 0 auto;
    }

    .subtitle {
        color: var(--text-light);
    }

    /* Categories Grid */
    .categories-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 2rem;
    }

    .category-card {
        background: var(--darker);
        border-radius: var(--border-radius);
        padding: 1.5rem;
        text-decoration: none;
        transition: var(--transition);
        display: flex;
        flex-direction: column;
        box-shadow: var(--box-shadow);
    }

    .category-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 24px rgba(0, 0, 0, 0.2);
    }

    .category-card h2 {
        color: var(--light);
        margin: 0 0 0.5rem 0;
        font-size: 1.25rem;
    }

    .category-card .description {
        color: var(--text);
        margin: 0 0 1rem 0;
        flex-grow: 1;
        font-size: 0.9rem;
    }

    .category-card .post-count {
        color: var(--text-light);
        font-size: 0.875rem;
        margin-top: auto;
    }

    /* Tags Cloud */
    .tags-cloud {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: center;
        padding: 2rem;
    }

    .tag-item {
        background: var(--darker);
        border-radius: var(--border-radius);
        padding: 0.75rem 1.25rem;
        text-decoration: none;
        color: var(--light);
        transition: var(--transition);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        box-shadow: var(--box-shadow);
    }

    .tag-item:hover {
        transform: translateY(-2px);
        background: var(--dark);
    }

    .tag-item .post-count {
        color: var(--text-light);
        font-size: 0.75rem;
        padding: 0.25rem 0.5rem;
        background: rgba(0, 0, 0, 0.2);
        border-radius: 1rem;
    }

    @media (max-width: 768px) {
        .tags-cloud {
            padding: 1rem;
        }

        .tag-item {
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
        }
    }
</style>