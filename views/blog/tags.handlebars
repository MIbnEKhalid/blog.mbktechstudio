{{> partial/tagsMetaData}}
<div class="section-container">
    <div class="section-header">
        <h1>All Tags</h1>
        <p class="subtitle">Browse posts by tag</p>
    </div>

    <div class="tags-cloud">
        {{#each tags}}
        <a href="/tag/{{encodeURIComponent this.name}}" class="tag-item" data-count="{{this.post_count}}">
            #{{trim this.name}}
            <span class="post-count">{{this.post_count}} posts</span>
        </a>
        {{else}}
        <div class="empty-state">
            <h2>No Tags Found</h2>
            <p>Check back later for new tags.</p>
        </div>
        {{/each}}
    </div>
</div>

<style>
    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .section-header h1 {
        color: var(--light);
        margin-bottom: 0.5rem;
    }

    .subtitle {
        color: var(--text-light);
    }

    .tags-cloud {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: center;
        padding: 2rem;
    }

    .tag-item {
        background: var(--darker);
        border-radius: var(--border-radius);
        padding: 0.75rem 1.25rem;
        text-decoration: none;
        color: var(--light);
        transition: var(--transition);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        box-shadow: var(--box-shadow);
    }

    .tag-item:hover {
        transform: translateY(-2px);
        background: var(--dark);
    }

    .tag-item .post-count {
        color: var(--text-light);
        font-size: 0.75rem;
        padding: 0.25rem 0.5rem;
        background: rgba(0, 0, 0, 0.2);
        border-radius: 1rem;
    }

    .empty-state {
        text-align: center;
        padding: 3rem;
        background: var(--darker);
        border-radius: var(--border-radius);
        color: var(--text-light);
        width: 100%;
    }

    .empty-state h2 {
        color: var(--light);
        margin-bottom: 1rem;
    }

    @media (max-width: 768px) {
        .tags-cloud {
            padding: 1rem;
        }

        .tag-item {
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
        }
    }
</style>